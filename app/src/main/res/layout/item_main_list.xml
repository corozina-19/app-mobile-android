<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        android:layout_margin="@dimen/fab_margin"
        tools:layout_editor_absoluteY="32dp"
        android:elevation="@dimen/elevation"
        android:background="@drawable/style_cardview"
        tools:ignore="MissingConstraints" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_big_icon"
                android:layout_width="138dp"
                android:layout_height="149dp"
                app:srcCompat="@drawable/image_sistomas"
                tools:ignore="MissingConstraints"
                android:scaleType="centerInside"
                android:layout_marginStart="@dimen/fab_margin"
                android:padding="@dimen/margin_image"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/fab_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:text="Sintomas"
                android:textSize="@dimen/text_big"
                android:textStyle="bold"
                android:textColor="@color/blueSecond"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:textColor="@color/blueTree"
                android:textSize="@dimen/text_big"
                android:text="¿Sabes cúales son sus sintomas?" />
        </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>